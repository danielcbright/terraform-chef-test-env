# Get the latest Centos7 AMI ID:
# Thanks Ryan Armstrong! http://cavaliercoder.com/blog/finding-the-latest-centos-ami.html
data "aws_ami" "centos" {
  owners      = ["679593333241"]
  most_recent = true

  filter {
    name   = "name"
    values = ["CentOS Linux 7 x86_64 HVM EBS *"]
  }

  filter {
    name   = "architecture"
    values = ["x86_64"]
  }

  filter {
    name   = "root-device-type"
    values = ["ebs"]
  }
}
